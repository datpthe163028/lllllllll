@page "/admin/roles"
@model Project.Admin.Role.IndexModel


@{

	ViewData["Title"] = "Danh sách các role (vai trò)";

}

<h2>@ViewData["Title"]</h2>

<partial name="_StatusMessage" model="@Model.StatusMessage"></partial>


<div style="margin-left: 20px;" class="mb-2">
	<a style=" border: 0px; background-color: #5969ff" class="btn btn-secondary" asp-page="./Create">Tạo role mới</a>
	<a style="border: 0px;  background-color: #5969ff" class="btn btn-secondary" asp-page="../User/Index">Quản lý thành viên</a>
</div>


<table style="margin-left: 20px;" class="table">
	<tr>
		<th>Tên Role</th>
		<th>Tác vụ</th>
	</tr>
	@foreach(var role in Model.roles)
	{
		<tr>
			<th>@role.Name</th>
			<th>
				<a class="btn btn-success btn-sm" asp-page="./Update" asp-route-roleid="@role.Id">Cập nhật</a>
				<a class="btn btn-success btn-sm" asp-page="./Delete" asp-route-roleid="@role.Id">Xóa</a>

			</th>
		</tr>
	}

</table>