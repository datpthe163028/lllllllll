@model List<Blog>

@{
	Layout = null;
}

@if (Model == null)
{
	<p>No Blog found.</p>
}
else
{
	<div class="table-responsive">
        <table class="table mb-0">
            <thead class="table-light">
                <tr>
                    <th>Blog ID</th>
                    <th>Name</th>
                    <th>HomeStatus</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var blog in Model)
                {
                    <form method="post" asp-controller="Blog" asp-action="">
                        <input type="hidden" name="billId" value="@blog.Blogid" />

                    <tr>
                        <td>
                            <div class="d-flex align-items-center">

                                <div class="ms-2">
                                    <h6 class="mb-0 font-14">@blog.Blogid</h6>
                                </div>
                            </div>
                        </td>
                        <td>@blog.name</td>


                        <td>
                            <a href="/Blog/ChangeStatus?id=@blog.Blogid">
                                <i class="fas fa-edit"></i>
                                    @(blog.HomeStatus == true ? "Enable" : "Disable")

                            </a>
                        </td>


                        <td class="align-middle">
                            <a href="/Blog/ViewDetail?id=@blog.Blogid" class="btn btn-primary btn-sm radius-30 px-4">viewDetail</a>
                            <a href="/Blog/Update?id=@blog.Blogid" class="btn btn-info btn-sm radius-30 px-4">update</a>
                            <a href="/Blog/Delete?id=@blog.Blogid" onclick="check(event)" class="btn btn-danger btn-sm radius-30 px-4">Delete</a>
                        </td>
                    </tr>
                    </form>

                }

            </tbody>
        </table>
    </div>
}